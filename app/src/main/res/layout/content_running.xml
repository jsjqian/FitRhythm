<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_running"
    tools:context="com.example.jack.fitrhythmapp.RunningActivity"
    android:background="#FF3E96">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/type"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="placeholder"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intensity"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="placeholder"
        />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:id="@+id/dumb_white_line3"
            android:layout_below="@+id/type"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_line"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quote"
        android:textColor="#FFFFFF"
        android:text="''pain is forever.''"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="40dp"
        android:layout_below="@id/relative"
        android:textAlignment="center"
        />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/two_eighth_notes"
        android:layout_below="@+id/quote"
        android:layout_marginTop="50dp"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/set_max"
        android:layout_above="@+id/dumb_white_line2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/set_max_volume"
        android:layout_marginBottom="5dp" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:id="@+id/dumb_white_line"
        android:layout_above="@+id/set_max"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_line"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:id="@+id/dumb_white_line2"
        android:layout_above="@+id/seek_bar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_line"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_height="55dp"
        android:layout_width="190dp"
        android:id="@+id/start_stop_button"
        android:text="start workout"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:textColor="#FF3E96"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/dumb_white_line"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="55dp"
        android:layout_width="100dp"
        android:id="@+id/restart_button"
        android:text="restart"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:textColor="#FF3E96"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/dumb_white_line"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
