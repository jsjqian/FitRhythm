<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ChooseExercise"
    tools:showIn="@layout/activity_choose_exercise"
    android:background="#FF3E96">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/choose_activity"
        android:layout_centerHorizontal="true"
        android:background="@drawable/choose_exercise"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/choose_exercise_line"
        android:background="@drawable/white_line"
        android:layout_below="@+id/choose_activity"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walking"
        android:background="@drawable/walking"
        android:layout_alignTop="@+id/choose_exercise_line"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/running"
        android:background="@drawable/running"
        android:layout_alignTop="@+id/walking"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/push_ups"
        android:background="@drawable/push_ups"
        android:layout_alignTop="@+id/running"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sit_ups"
        android:background="@drawable/sit_ups"
        android:layout_alignTop="@+id/push_ups"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
